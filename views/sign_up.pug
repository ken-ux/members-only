extends layout

block content
  h1= title
  form(method="POST")
    .form-group
      label(for="first_name") First Name
      input#first_name(
        type="text",
        placeholder="John",
        name="first_name",
        required,
        value=user === undefined ? "" : user.first_name
      )
    .form-group
      label(for="last_name") Last Name
      input#last_name(
        type="text",
        placeholder="Doe",
        name="last_name",
        required,
        value=user === undefined ? "" : user.last_name
      )
    .form-group
      label(for="username") Username
      input#username(
        type="text",
        placeholder="JohnDoe123",
        name="username",
        required,
        value=user === undefined ? "" : user.username
      )
    .form-group
      label(for="password") Password
      input#password(type="password", name="password", required)
    .form-group
      label(for="membership") If you know the secret membership password, enter it here:
      input#membership(type="password", name="membership")
    button(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
