doctype html
html(lang="en")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/style_output.css")
  body.px-24.py-12
    nav
      ul.flex.justify-end.gap-12.my-4(class="*:text-xl")
        li
          a.transition.linear.delay-50(href="/") Home
        if currentUser
          li
            a.transition.linear.delay-50(href="/profile") Profile
          li
            a.transition.linear.delay-50(href="/logout") Logout
        else
          li
            a.transition.linear.delay-50(href="/login") Login
          li
            a.transition.linear.delay-50(href="/sign-up") Sign-Up
    block content
