doctype html
html(lang="en")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/style_output.css")
  body.min-h-screen.relative
    nav.py-4.px-8.mb-12.backdrop-blur-sm.border-b.sticky.top-0(
      class="bg-white/20 md:px-24"
    )
      ul.flex.justify-end.items-center.gap-8(class="*:text-lg md:gap-12")
        li
          a.transition.linear.delay-50(href="/", aria-label="Home")
            svg.w-8.h-8(
              http://www.w3.org/2000/svg,
              viewBox="0 0 24 24",
              fill="currentColor"
            )
              path(
                d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z"
              )
              path(
                d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z"
              )
        if currentUser
          li
            a.transition.linear.delay-50(href="/profile") Profile
          li
            a.transition.linear.delay-50(href="/logout") Logout
        else
          li
            a.transition.linear.delay-50(href="/login") Login
          li
            a.transition.linear.delay-50(href="/sign-up") Sign-Up
    .px-8(class="md:px-24")
      block content
    footer.px-8.py-4.bg-emerald-50.w-full.text-right.absolute.bottom-0.shadow-inner(class="md:px-24")
      a.text-slate-500(href="https://github.com/ken-ux/inventory-application") GitHub Repo
