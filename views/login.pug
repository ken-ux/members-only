extends layout

block content
  h1= title
  form(method="POST")
    .form-group
      label(for="username") Username
      input#username(
        type="text",
        name="username",
        required,
        value=username === undefined ? "" : username
      )
    .form-group
      label(for="password") Password
      input#password(type="password", name="password", required)
    button(type="submit") Login

  if errors
    ul
      each error in errors
        li!= error.msg
