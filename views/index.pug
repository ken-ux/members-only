extends layout

block content
  h1= title
  p Welcome to #{ title }
  if currentUser
    a(href="/send-message") Send a Message
  ul
    each message in messages
      li
        p Title: #{ message.title }
        p Message: #{ message.text }
        if currentUser
          p Author: #{ message.author.full_name }
          p Date: #{ message.timestamp_formatted }
        else
          p Hidden Author
        if currentUser && currentUser.admin
          a(href=`/delete/${message.id}`) Delete
    else
      p There are no messages for you to read.
